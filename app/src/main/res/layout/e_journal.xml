<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                style="@style/EJournalTvStyle"
                android:text="All learners">
            </TextView>

            <GridLayout
                android:id="@+id/gridLearners"
                style="@style/EJournalGridStyle">
            </GridLayout>

            <TextView
                style="@style/EJournalTvStyle"
                android:text="All parents">
            </TextView>

            <GridLayout
                android:id="@+id/gridParents"
                style="@style/EJournalGridStyle">
            </GridLayout>

            <TextView
                style="@style/EJournalTvStyle"
                android:text="All teachers">
            </TextView>

            <GridLayout
                android:id="@+id/gridTeachers"
                style="@style/EJournalGridStyle">
            </GridLayout>

            <TextView
                style="@style/EJournalTvStyle"
                android:text="All employees">
            </TextView>

            <GridLayout
                android:id="@+id/gridEmployees"
                style="@style/EJournalGridStyle">
            </GridLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
            </TextView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>